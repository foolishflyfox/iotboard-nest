{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../app-config/*.yaml",
        "outDir": "./dist/app-config"
      },
      {
        "include": "../app-data/**/*",
        "outDir": "./dist/app-data"
      }
    ]
  }
}